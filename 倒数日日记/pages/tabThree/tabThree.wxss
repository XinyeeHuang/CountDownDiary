/**index.wxss**/
.top {
  width: 100%;
  height: 44px;
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 4%;
  box-sizing: border-box;
}
.top .icon {
  width: 30px;
  height: 30px;
  background-color: #ffffff;
}
.top .position {
  width: 60px;
  height: 44px;
  line-height: 44px;
  font-size: 16px;
}
.top .search {
  width: 80%;
  height: 30px;
  background-color: #f2f3f4;
  border-radius: 15px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.top .search .searchIcon {
  margin-left: 10px;
  width: 20px;
  height: 20px;
}
.top .search .text {
  margin-left: 8px;
  color: #8d8c8c;
  font-size: 12px;
}

.ads {
  width: 100%;
  height: 124px;
  background-color: #666666;
}
.swiper {
  width: 100%;
  height:124px;
}
.swiper image {
  height: 124px;
  width: 100%;
}
.nav {
  width: 100%;
  height: 44px;
  display: flex;
  justify-content: space-between;
  padding: 0 10%;
  box-sizing: border-box;
  align-items: center;
  font-size: 16px;
}
.nav .opt {
  width: auto;
  height: 26px;
  line-height: 26px;
}
.nav .selected {
  border-bottom: 3px solid #ffc900;
}

.box {
  background-color: #f2f3f4;
}
.box .containbox {
  margin: 0 2%;
  padding-bottom: 6%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.display {
  width: 170px;
  height: 352px;
  background-color: #ffffff;
  margin-top: 4%;
  border-radius: 4px;
  overflow: hidden;
}
.display .pic {
  width: 170px;
  height: 239px;
}
.display .name {
  font-size: 15px;
  text-indent: 10px;
  line-height: 22px;
  margin-bottom: 4px;
}
.display .ifm {
  font-size: 8px;
  color: #8a8a8a;
  text-indent: 10px;
  line-height: 12px;
}
.display .line {
  width: 90%;
  height: 2px;
  margin: 6px auto;
  margin-top: 4px;
  background-color: #f7f7f7;
}
.display .description {
  font-size: 12px;
  color: #6d6d6d;
  line-height: 18px;
  padding-left: 10px;
}
